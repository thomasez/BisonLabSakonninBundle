{% extends '::base.html.twig' %}

{% block body -%}
    <h1>MessageType</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Callbackfunction</th>
                <td>{{ entity.callbackFunction }}</td>
            </tr>
            <tr>
                <th>Callbacktype</th>
                <td>{{ entity.callbackType }}</td>
            </tr>
            <tr>
                <th>Forwardfunction</th>
                <td>{{ entity.forwardFunction }}</td>
            </tr>
            <tr>
                <th>Forwardtype</th>
                <td>{{ entity.forwardType }}</td>
            </tr>
            <tr>
                <th>Expungde, in days.<br>0 means never delete.</th>
                <td>{{ entity.expungedays }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('messagetype') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('messagetype_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
