{% extends '::base.html.twig' %}

{% block body -%}
    <h1>MessageType list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Callbackfunction</th>
                <th>Callbacktype</th>
                <th>Forwardfunction</th>
                <th>Forwardtype</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('messagetype_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.callbackFunction }}</td>
                <td>{{ entity.callbackType }}</td>
                <td>{{ entity.forwardFunction }}</td>
                <td>{{ entity.forwardType }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('messagetype_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('messagetype_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('messagetype_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
