{% extends 'base.html.twig' %}

{% block body %}
    <h1>Files</h1>

    <table class="table table-striped table-bordered table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>File ID</th>
                <th>Mime type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for file in files %}
            <tr>
                <td><a href="{{ path('file_show', { 'id': file.id }) }}">{{ file.name }}</a></td>
                <td>{{ file.fileId }}</td>
                <td>{{ file.mimetype }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('file_show', { 'id': file.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('file_edit', { 'id': file.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('file_new') }}">Create a new file</a>
        </li>
    </ul>
{% endblock %}
