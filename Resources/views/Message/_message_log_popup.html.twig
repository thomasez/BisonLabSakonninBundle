<script type="text/javascript">

function openMessageLogBox(url) {
{# There will be more options #}
{% if context is defined %}
    url = "{{ path('message_context_search', {'access': 'ajax', 'system': context.system, 'object_name': context.object_name, 'external_id': context.external_id }) }}";
{% endif %}
    $.get(
        url, 
        function( data ) {
            $( "#messagelogcontent" ).html(data);
        },
        null,
        'html'
    );
    $( "#messagelogbox" ).modal();
    return false;
}

</script>

<div class="modal fade" id="messagelogbox" role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Messages</h4>
            <div id="messagelogcontent">
            </div>
      </div>
    </div>
  </div>
</div>
