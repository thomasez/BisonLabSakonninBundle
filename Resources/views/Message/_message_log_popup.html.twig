<script type="text/javascript">

function openSakonninMessageLogBox(url, title = null) {
    /* Just reset whatever was there */
    $( "#sakonninMessageLogContent" ).html("");
{# There will be more options #}
{% if context is defined %}
    url = "{{ path('message_context_search', {'access': 'ajax', 'system': context.system, 'object_name': context.object_name, 'external_id': context.external_id }) }}";
{% endif %}
    $.get(
        url, 
        function( data ) {
            $( "#sakonninMessageLogContent" ).html(data);
        },
        null,
        'html'
    );
    if (title) {
        $( "#sakonninMessageLogTitle" ).html(title);
    } else {
        $( "#sakonninMessageLogTitle" ).html("Messages");
    }
    $( "#sakonninMessageLogBox" ).modal();
    return false;
}

</script>

<div class="modal fade" id="sakonninMessageLogBox" role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="sakonninMessageLogTitle"></h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
    <div class="modal-body" id="sakonninMessageLogContent">
    </div>
    </div>
  </div>
</div>
