{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sakonnintemplate</h1>

    <table class="sakonnin_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sakonninTemplate.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sakonninTemplate.name }}</td>
            </tr>
            <tr>
                <th>Langcode</th>
                <td>{{ sakonninTemplate.langCode }}</td>
            </tr>
            <tr>
                <th>Template</th>
                <td>{{ sakonninTemplate.template }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sakonnintemplate_index') }}">
            <button>Template List</button>
            </a>
        </li>
        <li>
            <a href="{{ path('sakonnintemplate_edit', { 'id': sakonninTemplate.id }) }}">
            <button>Edit</button>
            </a>
        </li>
        {% if sakonninTemplate.deleteable %}
        <li>
        {{ include('@BisonLabSakonnin/SakonninTemplate/_delete_form.html.twig') }}
        </li>
        {% endif %}
    </ul>
{% endblock %}
